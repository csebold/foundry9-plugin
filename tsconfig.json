{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext", // Webpack handles module bundling
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Output directory for TypeScript
    "moduleResolution": "Node",
    "types": [
      "obsidian"
    ],
    "resolveJsonModule": true,
    "declaration": false // No need for declaration files in the bundle
  },
  "include": [
    "main.ts",
    "src/**/*"
  ],
  "exclude": [
    "deploy/**/*"
  ]
}