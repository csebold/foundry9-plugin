{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "command": {
            "type": "string",
            "description": "The command being executed."
        },
        "sourceBase": {
            "type": "string",
            "description": "The base directory for the source files."
        },
        "targetBase": {
            "type": "string",
            "description": "The base directory for the target files."
        },
        "dirs": {
            "type": "array",
            "description": "An array representing directories.",
            "items": {
                "type": "string"
            }
        },
        "files": {
            "type": "array",
            "description": "An array representing files.",
            "items": {
                "type": "string"
            }
        },
        "dryRun": {
            "type": "boolean",
            "description": "A flag indicating whether the operation is a dry run or not."
        },
        "debug": {
            "type": "boolean",
            "description": "A flag indicating whether to enable debug mode or not."
        }
    },
    "required": [],
    "additionalProperties": false
}